  "9_notes_special_cases": {
    "header": "Important Notes & Special Cases",
    "critical_notes": [
      {
        "point": "Brand Name",
        "rule": "NEVER translate 'Beauté' - it is a proper noun and brand identity",
        "example": "Beauté remains 'Beauté' in all contexts"
      },
      {
        "point": "URL Slugs",
        "rule": "Keep URL slugs unchanged in href attributes (e.g., /all-products/skincare/xit-khoang)",
        "example": "href='/all-products/skincare/xit-khoang' - slug stays the same, but display text becomes 'Mineral Mist'"
      },
      {
        "point": "Chemical/Technical Terms",
        "rule": "Keep international cosmetic terms as-is: Serum, BHA, Toner, Mascara, etc.",
        "example": "BHA → BHA, Toner → Toner, Mascara → Mascara"
      },
      {
        "point": "Brand Names",
        "rule": "Keep all brand names unchanged: Banobagi, PRETTYSKIN, Obagi, Mediheal, Dove, Vaseline, The Ordinary, Maybelline, Apieu, Karadium",
        "example": "All brand names remain exactly as written"
      },
      {
        "point": "Day Abbreviations",
        "rule": "When translating 'T2 - T6' and 'T7 - CN', use: 'Monday - Friday' and 'Saturday - Sunday'",
        "example": "T2 - T6 | 08:00 - 20:00 → Monday - Friday | 08:00 - 20:00"
      },
      {
        "point": "Abbreviations",
        "rule": "Translate context but preserve abbreviations when they're standard in English",
        "example": "S/L (Số Lượng) → Qty (Quantity), MST (Tax ID) → Tax ID"
      },
      {
        "point": "Legal/Standards Text",
        "rule": "Keep ISO standards and official certifications exactly: ISO 22716, GMP",
        "example": "ISO 22716 → ISO 22716, GMP → GMP"
      },
      {
        "point": "Product Category Format",
        "rule": "For product descriptions: translate technical aspects but keep category names consistent",
        "example": "'Sữa rửa mặt' = 'Face Cleanser' (can also be 'Facial Cleanser')"
      },
      {
        "point": "Money/Currency",
        "rule": "Keep 'VND' (Vietnamese Dong) unchanged - use 'VND' not 'Vietnamese Dong'",
        "example": "10.000 VND → 10,000 VND (note: change decimal format to English standard)"
      },
      {
        "point": "Payment Method Names",
        "rule": "Keep 'Momo' as-is, but translate 'Ví điện tử Momo' → 'Momo E-Wallet'",
        "example": "'Ví điện tử Momo' is a specific payment service name"
      },
      {
        "point": "Membership Tiers",
        "rule": "Translate 'Khách hàng VIP' → 'VIP Customer' (keep VIP as acronym)",
        "example": "VIP remains as standard international abbreviation"
      },
      {
        "point": "Form Field Markers",
        "rule": "Keep asterisk (*) for required fields: 'Tên Khách Hàng *' → 'Customer Name *'",
        "example": "Asterisk indicates mandatory field across all forms"
      },
      {
        "point": "Handlebars Expressions",
        "rule": "DO NOT translate Handlebars template syntax {{#each}}, {{#if}}, {{this._id}}, etc.",
        "example": "Keep all {{variable}} expressions unchanged"
      },
      {
        "point": "HTML Attributes",
        "rule": "DO NOT translate href, id, name, class, data-* attributes",
        "example": "href='/home' stays unchanged, only text content inside <a> tags gets translated"
      },
      {
        "point": "Image Alt Text",
        "rule": "Translate alt text for accessibility, but preserve actual image URLs",
        "example": "alt='Nhà máy Beauté' → alt='Beauté Factory'"
      },
      {
        "point": "Comments & Help Text",
        "rule": "Translate all user-facing text in comments, tooltips, and helper messages",
        "example": "data-tippy-content='Tìm kiếm sản phẩm' → data-tippy-content='Search products'"
      },
      {
