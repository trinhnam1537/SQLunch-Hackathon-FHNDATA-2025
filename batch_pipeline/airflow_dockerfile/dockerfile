FROM apache/airflow:2.10.2

USER root

# Install Java (required for Spark)
RUN apt-get update && apt-get install -y --no-install-recommends \
    openjdk-17-jdk-headless \
    curl \
    && rm -rf /var/lib/apt/lists/*

ENV JAVA_HOME=/usr/lib/jvm/java-17-openjdk-amd64
ENV PATH=$JAVA_HOME/bin:$PATH

# Install Spark (binary distribution)
RUN curl -fsSL https://archive.apache.org/dist/spark/spark-3.5.3/spark-3.5.3-bin-hadoop3.tgz \
    | tar xz -C /opt && \
    mv /opt/spark-3.5.3-bin-hadoop3 /opt/spark && \
    chmod -R 755 /opt/spark

ENV SPARK_HOME=/opt/spark
ENV PATH=$SPARK_HOME/bin:$PATH

COPY requirements.txt /requirements.txt

# install python dependencies as airflow user
USER airflow
RUN pip install --no-cache-dir -r requirements.txt

USER root
# Ensure logs folder exists and is writable
RUN mkdir -p /opt/airflow/logs && chown -R 50000:0 /opt/airflow || true

USER airflow
WORKDIR /opt/airflow
