  <div class="cart">
    <div class="section-header">
      <i class="fi fi-rs-shopping-cart-check"></i>
      <p>Shopping Cart</p>
    </div>

    <div style="overflow-x: auto;">
      <table>
        <thead>
          <tr>
            <td style="width: 5%;"></td>
            <td style="width: 10%;"></td>
            <td style="width: 40%;">Product</td>
            <td style="width: 15%;">Unit Price</td>
            <td style="width: 10%;">Quantity</td>
            <td style="width: 15%;">Total Amount</td>
            <td style="width: 5%;"></td>
          </tr>
        </thead>
        <tbody></tbody>
        <tfoot>
          <td colspan="5">Total</td>
          <td class="total" style="text-align: right;"></td>
          <td></td>
        </tfoot>
      </table>
    </div>
  </div>

  <div class="voucher">
    <div class="section-header">
      <i class="fi fi-rs-ticket"></i>
      <p>Discount Code</p>
    </div>

    <div class="voucher-input">
      <button style="width: fit-content;" class="voucher-list-button"><i class="fi fi-rr-list"></i>List</button>
      <input type="text" placeholder="Enter discount code..." id="voucher-code" name="voucher-code">
      <button style="width: fit-content;" class="voucher-submit-button"><i class="fi fi-rr-check"></i>Apply</button>
    </div>

    <div class="price">
      <div class="old-price">
        <span class="old-price-text">Old Price: </span>
        <span class="old-price-value"></span>
      </div>
      <div class="new-price">
        <span class="new-price-text">New Price: </span>
        <span class="new-price-value"></span>
      </div>
    </div>

    <div><span class="form-message"></span></div>
  </div>

  <div class="contact-info">
    <div class="section-header">
      <i class="fi fi-rs-user-check"></i>
      <p>Customer Information</p>
    </div>

    <div class="info">
      <div class="form-group">
        <label for="name"><i class="fi fi-rr-user"></i>Customer Name *</label>
        <input type="text" id="name" name="name" placeholder="Enter your name">
        <span class="form-message"></span>
      </div>

      <div class="form-group">
        <label for="phone"><i class="fi fi-rr-phone-call"></i>Phone Number *</label>
        <input type="text" id="phone" name="phone" placeholder="Enter phone number">
        <span class="form-message"></span>
      </div>

      <div class="form-group full">
        <label for="address"><i class="fi fi-rr-map-marker"></i>Delivery Address *</label>
        <input type="text" id="address" name="address" placeholder="Enter delivery address">
        <span class="form-message"></span>
      </div>

      <div class="form-group full">
        <label for="note"><i class="fi fi-rr-document"></i>Notes</label>
        <textarea id="note" name="note" placeholder="Additional notes (optional)"></textarea>
      </div>
    </div> 
  </div>

  <div class="payment-method">
    <div class="section-header">
      <i class="fi fi-rr-credit-card"></i>
      <p>Payment Method</p>
    </div>

    <div class="form-group">
      <label class="payment-option">
        <input type="radio" id="cash" name="paymentMethod" value="cash" checked>
        <span class="radio-custom"></span>
        <span class="payment-label"><i class="fi fi-rr-money"></i>Pay on Delivery</span>
      </label>

      <label class="payment-option">
        <input type="radio" id="e-wallet" name="paymentMethod" value="e-wallet">
        <span class="radio-custom"></span>
        <span class="payment-label"><i class="fi fi-rr-wallet"></i>Momo E-Wallet</span>
      </label>

      <label class="payment-option">
        <input type="radio" id="transfer" name="paymentMethod" value="transfer">
        <span class="radio-custom"></span>
        <span class="payment-label"><i class="fi fi-rr-bank"></i>Bank Transfer</span>
      </label>

      <div class="bank-account" style="display: none;">
        <img src="https://res.cloudinary.com/bunny-store/image/upload/v1711070720/web-img/fc4c4fd10517a949f006_ndjvt6.png" alt="Bank QR Code" loading="lazy">
        <div class="form-group">
          <label><i class="fi fi-rr-info"></i>After completing the bank transfer, please send the bill image</label>
          <input type="file" name="img" id="img" accept="image/*"/>
        </div>
      </div>
    </div>
  </div>

  <div class="button-group">
    <button class="submit-button" style="display: none;"><i class="fi fi-rr-check"></i>Complete Order</button>
    <button class="next-button"><i class="fi fi-rr-arrow-right"></i>Continue</button>
  </div>
</div>

