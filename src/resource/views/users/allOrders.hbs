  <div class="cart">
    <div class="section-header">
      <i class="fi fi-rs-shopping-cart-check"></i>
      <p>Giỏ Hàng</p>
    </div>

    <div style="overflow-x: auto;">
      <table>
        <thead>
          <tr>
            <td style="width: 5%;"></td>
            <td style="width: 10%;"></td>
            <td style="width: 40%;">Sản Phẩm</td>
            <td style="width: 15%;">Đơn Giá</td>
            <td style="width: 10%;">Số Lượng</td>
            <td style="width: 15%;">Tổng Tiền</td>
            <td style="width: 5%;"></td>
          </tr>
        </thead>
        <tbody></tbody>
        <tfoot>
          <td colspan="5">Tổng</td>
          <td class="total" style="text-align: right;"></td>
          <td></td>
        </tfoot>
      </table>
    </div>
  </div>

  <div class="voucher">
    <div class="section-header">
      <i class="fi fi-rs-ticket"></i>
      <p>Mã giảm giá</p>
    </div>

    <div class="voucher-input">
      <button style="width: fit-content;" class="voucher-list-button"><i class="fi fi-rr-list"></i>Danh sách</button>
      <input type="text" placeholder="Nhập mã giảm giá..." id="voucher-code" name="voucher-code">
      <button style="width: fit-content;" class="voucher-submit-button"><i class="fi fi-rr-check"></i>Áp dụng</button>
    </div>

    <div class="price">
      <div class="old-price">
        <span class="old-price-text">Giá cũ: </span>
        <span class="old-price-value"></span>
      </div>
      <div class="new-price">
        <span class="new-price-text">Giá mới: </span>
        <span class="new-price-value"></span>
      </div>
    </div>

    <div><span class="form-message"></span></div>
  </div>

  <div class="contact-info">
    <div class="section-header">
      <i class="fi fi-rs-user-check"></i>
      <p>Thông Tin Khách Hàng</p>
    </div>

    <div class="info">
      <div class="form-group">
        <label for="name"><i class="fi fi-rr-user"></i>Tên Khách Hàng *</label>
        <input type="text" id="name" name="name" placeholder="Nhập tên của bạn">
        <span class="form-message"></span>
      </div>

      <div class="form-group">
        <label for="phone"><i class="fi fi-rr-phone-call"></i>Số Điện Thoại *</label>
        <input type="text" id="phone" name="phone" placeholder="Nhập số điện thoại">
        <span class="form-message"></span>
      </div>

      <div class="form-group full">
        <label for="address"><i class="fi fi-rr-map-marker"></i>Địa Chỉ Nhận Hàng *</label>
        <input type="text" id="address" name="address" placeholder="Nhập địa chỉ nhận hàng">
        <span class="form-message"></span>
      </div>

      <div class="form-group full">
        <label for="note"><i class="fi fi-rr-document"></i>Ghi Chú</label>
        <textarea id="note" name="note" placeholder="Ghi chú thêm (tuỳ chọn)"></textarea>
      </div>
    </div> 
  </div>

  <div class="payment-method">
    <div class="section-header">
      <i class="fi fi-rr-credit-card"></i>
      <p>Hình Thức Thanh Toán</p>
    </div>

    <div class="form-group">
      <label class="payment-option">
        <input type="radio" id="cash" name="paymentMethod" value="cash" checked>
        <span class="radio-custom"></span>
        <span class="payment-label"><i class="fi fi-rr-money"></i>Thanh toán khi nhận hàng</span>
      </label>

      <label class="payment-option">
        <input type="radio" id="e-wallet" name="paymentMethod" value="e-wallet">
        <span class="radio-custom"></span>
        <span class="payment-label"><i class="fi fi-rr-wallet"></i>Ví điện tử Momo</span>
      </label>

      <label class="payment-option">
        <input type="radio" id="transfer" name="paymentMethod" value="transfer">
        <span class="radio-custom"></span>
        <span class="payment-label"><i class="fi fi-rr-bank"></i>Chuyển Khoản</span>
      </label>

      <div class="bank-account" style="display: none;">
        <img src="https://res.cloudinary.com/bunny-store/image/upload/v1711070720/web-img/fc4c4fd10517a949f006_ndjvt6.png" alt="Bank QR Code" loading="lazy">
        <div class="form-group">
          <label><i class="fi fi-rr-info"></i>Sau khi chuyển khoản xong, vui lòng gửi hình ảnh bill nha</label>
          <input type="file" name="img" id="img" accept="image/*"/>
        </div>
      </div>
    </div>
  </div>

  <div class="button-group">
    <button class="submit-button" style="display: none;"><i class="fi fi-rr-check"></i>Hoàn tất đặt hàng</button>
    <button class="next-button"><i class="fi fi-rr-arrow-right"></i>Tiếp tục</button>
  </div>
</div>

