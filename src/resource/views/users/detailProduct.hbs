<div class="detail-product-container">
  <div class="table">
    <div class="loading"></div>
    <div class="image-box">
      <div class="image-main">
        <span class="discount-badge" id="discount-badge"></span>
        <img id="main-image" loading="lazy"/>
        <button class="slide-prev"><i class="fi fi-rr-angle-small-left"></i></button>
        <button class="slide-next"><i class="fi fi-rr-angle-small-right"></i></button>
      </div>
      <div class="image-thumbnails">
        <div class="thumbnail active"><img loading="lazy" alt="thumbnail"/></div>
        <div class="thumbnail"><img loading="lazy" alt="thumbnail"/></div>
        <div class="thumbnail"><img loading="lazy" alt="thumbnail"/></div>
        <div class="thumbnail"><img loading="lazy" alt="thumbnail"/></div>
        <div class="thumbnail"><img loading="lazy" alt="thumbnail"/></div>
      </div>
    </div>
    
    <div class="details-box">
      <div class="product-title">
        <p id="product-rate">
          <span id="rate-score"></span>/5
          <i class="fi fi-ss-star"></i>
          <i class="fi fi-ss-star"></i>
          <i class="fi fi-ss-star"></i>
          <i class="fi fi-ss-star"></i>
          <i class="fi fi-ss-star"></i>
        </p>
        <h3 id="brand"></h3>
        <h1 id="name"></h1>
        <del><h4 id="old-price"></h4></del>
        <h3 id="price"></h3>
        <h4 id="quantity"></h4>
        <h5 id="sale-number"></h5>
      </div>
      
      <div class="description">
        <p id="description"></p>
      </div>

      <div class="quantity">
        <i class="fi fi-rr-minus-circle"></i>
        <p></p>
        <i class="fi fi-rr-add"></i>
      </div>

      <div class="button">
        <div class="add-to-cart"><p>Add to Cart</p></div>
        <div class="buy-now"><a href="/all-orders">Mua Ngay</a></div>
        <div class="out-of-order"><p>Out of Stock</p></div>
      </div>
    </div>
  </div>

  <div class="more-details">
    <div class="loading"></div>
    <h3>PRODUCT INFORMATION</h3>
    <p id="details">{{productInfo.details}}</p>
  </div>
  
  <div class="more-details">
    <div class="loading"></div>
    <h3>USAGE GUIDE</h3>
    <p id="guide">{{productInfo.guide}}</p>
  </div>

  <div class="more-details">
    <div class="loading"></div>
    <h3>PRODUCT REVIEWS</h3>
    <div class="rating-box">
      <div class="rating-score">
        <i class="fi fi-ss-star"></i><h1>{{productInfo.rate}}</h1>
      </div>
      <div class="rating-detail-score">
        <div>1<i class="fi fi-ss-star"></i><span id="rating-border"><span id="rating-progress"></span></span><span id="rating-percent">0</span>% | <span id="rating-num">0</span> reviews</div>
        <div>2<i class="fi fi-ss-star"></i><span id="rating-border"><span id="rating-progress"></span></span><span id="rating-percent">0</span>% | <span id="rating-num">0</span> reviews</div>
        <div>3<i class="fi fi-ss-star"></i><span id="rating-border"><span id="rating-progress"></span></span><span id="rating-percent">0</span>% | <span id="rating-num">0</span> reviews</div>
        <div>4<i class="fi fi-ss-star"></i><span id="rating-border"><span id="rating-progress"></span></span><span id="rating-percent">0</span>% | <span id="rating-num">0</span> reviews</div>
        <div>5<i class="fi fi-ss-star"></i><span id="rating-border"><span id="rating-progress"></span></span><span id="rating-percent">0</span>% | <span id="rating-num">0</span> reviews</div>
      </div>
    </div>
  </div>
  
  <div class="more-details">
    <div class="loading"></div>
    <h3>PRODUCT COMMENTS</h3>
    <div class="comment-box">
      {{#each holderComments}}
        <div class="comment">
          <p id="sender"></p>
          <p><span id="rate"></span><i class="fi fi-ss-star"></i> </p>
          <p id="comment"></p>
        </div>
      {{/each}}
    </div>
  </div>

  <div class="related-products">
    <div class="title"><span class="main-title"><b>RELATED PRODUCTS</b></span></div>

    <div class="related-tabs">
      <button class="tab-btn active" data-tab="category">
        <i class="fi fi-rr-list"></i> By Category
      </button>
      <button class="tab-btn" data-tab="type">
        <i class="fi fi-rr-list"></i> By Type
      </button>
      <button class="tab-btn" data-tab="brand">
        <i class="fi fi-rr-tag"></i> By Brand
      </button>
      <button class="tab-btn" data-tab="viewed">
        <i class="fi fi-rr-eye"></i> Recently Viewed
      </button>
      <button class="tab-btn" data-tab="recommended">
        <i class="fi fi-rr-star"></i> Recommended
      </button>
    </div>

    <div class="products" id="related-category">
      {{#each holderRelatedProducts}}
        {{> product}}
      {{/each}}
    </div>

    <div class="products" id="related-type" style="display:none;">
      <div class="loading-placeholder"></div>
    </div>
   
    <div class="products" id="related-brand" style="display:none;">
      <div class="loading-placeholder"></div>
    </div>

    <div class="products" id="related-viewed" style="display:none;">
      <div class="loading-placeholder"></div>
    </div>

    <div class="products" id="related-recommended" style="display:none;">
      <div class="loading-placeholder"></div>
    </div>
  </div>
</div>

<script src='/js/user/detailProduct.js'></script>