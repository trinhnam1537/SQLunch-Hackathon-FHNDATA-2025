<div class="admin-create-store-container">
  <div id="form">
    <div class="form-title">
      <p>Add New Store</p>
    </div>

    <div class="form-group">
      <label for="name">Store Name *</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="VD: Bunny House Thanh Xuân">
    </div>

    <div class="form-group">
      <label for="address">Store Address *</label>
      <input type="text" class="form-control" id="address" name="address" placeholder="VD: Thanh Xuân, Hà Nội">
    </div>

    <div class="form-group">
      <label for="details">Store Information *</label>
      <input type="text" class="form-control" id="details" name="details" placeholder="VD: đại lý to, rộng rãi với 500m2">
    </div>

    <div class="submit-button"><button title="submit" type="submit">Complete</button></div>
  </div>
</div>

<script src="/js/admin/create/store.js"></script>