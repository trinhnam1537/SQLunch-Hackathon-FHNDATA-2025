<div class="admin-detail-blog-container">
  <div class="form-container">
    <div class="form-header">
      <h1>Edit Blog Post</h1>
      <p class="form-subtitle">Update your blog content and details</p>
    </div>

    <form id="editBlogForm" class="blog-form">
      <input type="hidden" id="blogId" name="blogId">

      <div class="form-section">
        <h3>Blog Content</h3>
        
        <div class="form-group">
          <label for="title">Title *</label>
          <input 
            type="text" 
            id="title" 
            name="title" 
            class="form-control" 
            placeholder="Enter blog title"
            required
          >
        </div>

        <div class="form-group">
          <label for="summary">Summary *</label>
          <textarea 
            id="summary" 
            name="summary" 
            class="form-control" 
            rows="3"
            placeholder="Write a brief summary of your blog post"
            required
          ></textarea>
        </div>

        <div class="form-group">
          <label for="content">Content *</label>
          <textarea 
            id="content" 
            name="content" 
            class="form-control form-control-large" 
            rows="10"
            placeholder="Write your blog content here..."
            required
          ></textarea>
        </div>
      </div>

      <div class="form-section">
        <h3>Blog Details</h3>

        <div class="form-row">
          <div class="form-group">
            <label for="category">Category *</label>
            <select id="category" name="category" class="form-control" required>
              <option value="">Select a category</option>
              <option value='{"name":"Beauty Tips","slug":"beauty-tips"}'>Beauty Tips</option>
              <option value='{"name":"Product Reviews","slug":"product-reviews"}'>Product Reviews</option>
              <option value='{"name":"Skincare","slug":"skincare"}'>Skincare</option>
              <option value='{"name":"Makeup","slug":"makeup"}'>Makeup</option>
              <option value='{"name":"Wellness","slug":"wellness"}'>Wellness</option>
              <option value='{"name":"General","slug":"general"}'>General</option>
            </select>
          </div>

          <div class="form-group">
            <label for="tags">Tags</label>
            <input 
              type="text" 
              id="tags" 
              name="tags" 
              class="form-control" 
              placeholder="Enter tags separated by commas"
            >
          </div>
        </div>

        <div class="form-row">
          <div class="form-group">
            <label for="status">Status *</label>
            <select id="status" name="status" class="form-control" required>
              <option value="draft">Draft</option>
              <option value="published">Published</option>
            </select>
          </div>

          <div class="form-group">
            <label for="featuredImage">Featured Image</label>
            <input 
              type="file" 
              id="featuredImage" 
              name="featuredImage" 
              class="form-control" 
              accept="image/*"
            >
            <small class="form-text">JPG, PNG or GIF (Max 5MB)</small>
          </div>
        </div>

        <div class="form-group">
          <label for="views">Views</label>
          <input 
            type="text" 
            id="views" 
            name="views" 
            class="form-control" 
            disabled
          >
          <small class="form-text">Auto-updated based on blog traffic</small>
        </div>

        <div class="form-group">
          <label for="publishedDate">Published Date</label>
          <input 
            type="text" 
            id="publishedDate" 
            name="publishedDate" 
            class="form-control" 
            disabled
          >
        </div>
      </div>

      <div class="form-actions">
        <button type="button" class="btn btn-secondary" onclick="window.history.back()">Cancel</button>
        <button type="submit" class="btn btn-primary">Update Blog</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/admin/detail/blog.js"></script>