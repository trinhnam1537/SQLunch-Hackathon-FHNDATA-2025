<div class="admin-all-purchases-container">  
  <div class="header">
    <div class="board-title">
      <p>Purchase Order: </p>
    </div>

    {{> dateFilter}}
  </div>

  <div class="control-bar">
    <div class="search">
      <select id="search-type" class="search-btn">
        <option value="">Search by</option>
        <option value="_id" selected>ID</option>
        <option value="supplierId">Supplier Code</option>
      </select>
      <input type="text" id="search-input" name="name" placeholder="Search purchase order" />
    </div>

    <div class="sort-filter">
      <div class="sort">
        <label>Sort by:</label>
        <select id="purchaseDate" class="filter-btn">
          <option value="">Order Date</option>
          <option value="1">Newest Date</option>
          <option value="-1">Oldest Date</option>
        </select>
        <select id="totalPurchasePrice" class="filter-btn">
          <option value="">Value</option>
          <option value="1">Value High - Low</option>
          <option value="-1">Value Low - High</option>
        </select>
      </div>

      <div class="filter">
        <button id="clear-sort-filter" style="display: none">Clear Filter</button>
      </div>
    </div>

    <button class="create-btn" id="create-btn">
      <i class="fi fi-rr-plus"></i>
      <span>Add Purchase Order</span>
    </button>
  </div>

  <div class="table">
    {{> exportFileButton}}
    <table class="all-items">
      <thead>
        <tr>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      </thead>

      <tbody>
        {{#each (holderData 10)}}
        <tr>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <span class="pagination"></span>
</div>

<div class="admin-create-purchase-container" id="create-modal">
  <div id="form">
    <div class="form-title">
      <p>Add New Purchase Order</p>
    </div>

    <div class="form-group">
      <label for="supplierId">Supplier Code</label>
      <select class="form-control" id="supplierId" name="supplierId">
        <option value="">Select supplier</option>
      </select>
    </div>

    <div class="form-group">
      <label for="purchaseDate">Purchase Date</label>
      <input type="date" class="form-control" id="purchaseDate" name="purchaseDate">
    </div>

    <div class="form-group">
      <label for="totalPurchasePrice">Total Cost</label>
      <input type="number" class="form-control" id="totalPurchasePrice" name="totalPurchasePrice" placeholder="Enter total cost">
    </div>

    <div class="form-group">
      <label for="items">Total Items</label>
      <input type="number" class="form-control" id="items" name="items" placeholder="Enter number of items">
    </div>

    <div class="submit-button">
      <button class="close-modal">Close</button>
      <button type="submit">Complete</button>
    </div>
  </div>
</div>

<div class="purchase-details-container" id="detail-modal">
  <div id="form">
    
    <table id="table-1">
      <thead>
        <tr><td colspan="2">PURCHASE ORDER INFORMATION</td></tr>
      </thead>
      <tr>
        <td>Purchase Order Code</td>
        <td><input type="text" name="id" disabled></td>
      </tr>
      <tr>
        <td>Supplier Code</td>
        <td><input type="text" name="supplierId" disabled></td>
      </tr>
      <tr>
        <td>Purchase Date</td>
        <td><input type="text" name="purchaseDate" disabled></td>
      </tr>
      <tr>
        <td>Total Items</td>
        <td><input type="text" name="items" disabled></td>
      </tr>
      <tr>
        <td>Total Cost</td>
        <td><input type="text" id="totalPurchasePrice" name="totalPurchasePrice" disabled></td>
      </tr>
    </table>

    <div class="submit-button">
      <button class="close-modal">Close</button>
      <button type="submit">Update</button>
    </div>
  </div>
</div>

<script type="module" src="/js/admin/all/purchase.js"></script>