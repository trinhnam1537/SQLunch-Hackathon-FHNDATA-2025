<div class="admin-all-employees-container">  
  <div class="header">
    <div class="board-title">
      <p>Employee: </p>
    </div>

    {{> dateFilter}}
  </div>

  <div class="control-bar">
    <div class="search">
      <input type="text" id="search-input" name="name" placeholder="Search employee" />
    </div>

    <div class="sort-filter">
      <div class="sort">
        <label for="createdAt">Sort by:</label>
        <select id="createdAt" class="filter-btn">
          <option value="">Seniority</option>
          <option value="-1">Seniority High - Low</option>
          <option value="1">Seniority Low - High</option>
        </select>
      </div>

      <div class="filter">
        <label>Filter:</label>
        <select id="role" class="filter-btn">
          <option value="">Position</option>
        </select>
        <select id="isActive" class="filter-btn">
          <option value="">Status</option>
          <option value="true">Online</option>
          <option value="false">Offline</option>
        </select>
        <button id="clear-sort-filter" style="display: none">Clear Filter</button>
      </div>
    </div>

    <button class="create-btn" id="create-btn">
      <i class="fi fi-rr-plus"></i>
      <span>Add Employee</span>
    </button>
  </div>

  <div class="table">
    {{> exportFileButton}}
    <table class="all-items">
      <thead>
        <tr>
          <td style="width:  5%">No.          </td>
          <td style="width: 20%">Employee Code </td>
          <td style="width: 25%">Employee Name</td>
          <td style="width: 10%">Email        </td>
          <td style="width: 30%">Address      </td>
          <td style="width: 10%">Details     </td>
        </tr>
      </thead>

      <tbody>
        {{#each (holderData 10)}}
          <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <span class="pagination"></span>
</div>

<div class="admin-create-employee-container" id="create-modal">
  <div id="form">
    <div class="form-title">
      <p>Add New Employee</p>
    </div>

    <div class="form-group">
      <label for="name">Employee Name</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="Enter employee name">
    </div>

    <div class="form-group">
      <label for="email">Email</label>
      <input type="email" class="form-control" id="email" name="email" placeholder="Enter email">
    </div>

    <div class="form-group">
      <label for="phone">Phone Number</label>
      <input type="text" class="form-control" id="phone" name="phone" placeholder="Enter phone number">
    </div>

    <div class="form-group">
      <label for="role">Role</label>
      <select class="form-control" id="role" name="role">
        <option value="">Select role</option>
      </select>
    </div>

    <div class="form-group">
      <label for="dob">Date of Birth</label>
      <input type="date" class="form-control" id="dob" name="dob">
    </div>

    <div class="form-group">
      <label for="gender">Gender</label>
      <select class="form-control" id="gender" name="gender">
        <option value="">Select gender</option>
        <option value="male">Male</option>
        <option value="female">Female</option>
      </select>
    </div>

    <div class="form-group">
      <label for="address">Address</label>
      <input type="text" class="form-control" id="address" name="address" placeholder="Enter address">
    </div>

    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" class="form-control" id="password" name="password" placeholder="Aa"> 
    </div>

    <div class="form-group">
      <label for="password-confirm">Confirm Password</label>
      <input type="password" class="form-control" id="password-confirm" name="password-confirm" placeholder="Aa">
    </div>

    <div class="submit-button">
      <button class="close-modal">Close</button>
      <button type="submit">Complete</button>
    </div>
  </div>
</div>

<div class="employee-details-container" id="detail-modal">
  <div id="form">
    <table id="table-1">
      <thead>
        <tr><td colspan="2">EMPLOYEE INFORMATION</td></tr>
      </thead>
      <tr>
        <td>Employee Code</td>
        <td><input type="text" id="id" disabled></td>
      </tr>
      <tr>
        <td>Employee Name</td>
        <td><input type="text" id="name"></td>
      </tr>
      <tr>
        <td>Position</td>
        <td><select name="role" id="role"></select></td>
      </tr>
      <tr>
        <td>Salary</td>
        <td><input type="text" id="wage" name="wage" disabled></td>
      </tr>
      <tr>
        <td>Email</td>
        <td><input type="text" id="email" name="email" disabled></td>
      </tr>
      <tr>
        <td>Phone</td>
        <td><input type="text" id="phone" name="phone"></td>
      </tr>
      <tr>
        <td>Date of Birth</td>
        <td><input type="date" id="dob" name="dob"></td>
      </tr>
      <tr>
        <td>Address</td>
        <td><input type="text" id="address" name="address"></td>
      </tr>
      <tr>
        <td>Gender</td>
        <td>
          <input type="radio" name="gender" id="male" value="male">Male
          <input type="radio" name="gender" id="female" value="female">Female
        </td>
      </tr>
      <tr>
        <td>Date Started</td>
        <td><input type="text" id="date" name="date" disabled></td>
      </tr>
    </table>

    <div class="submit-button">
      <button class="close-modal">Close</button>
      <button type="submit">Update</button>
    </div>
  </div>
</div>

<script type="module" src="/js/admin/all/employee.js"></script>