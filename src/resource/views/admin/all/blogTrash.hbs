<div class="admin-trash-blogs-container">
  <div class="board-title">
    <p>Deleted:</p>
    <p class="blogs"><a href="/admin/all-blogs">Blog</a></p>
  </div>

  <div class="table">
    {{> exportFileButton}}
    <table class="all-items">
      <thead>
        <tr>
          <td style="width:  5%">No.     </td>
          <td style="width: 15%">Brand    </td>
          <td style="width: 30%">Name     </td>
          <td style="width: 15%">Type    </td>
          <td style="width: 15%">Price     </td>
          <td style="width: 20%"></td>
        </tr>
      </thead>

      <tbody>
        {{#each (holderData 10)}}
        <tr>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <span class="pagination"></span>
</div>

<div id="restore-modal" class="modal">
  <div class="modal-content">
    <div class="modal-header success">
      <i class="fi fi-rr-refresh"></i>
      <h3>Restore Blog</h3>
    </div>
    <div class="modal-body">
      <p>Do you want to <strong>restore</strong> this blog?</p>
      <p class="blog-name">{{this.name}}</p>
      <p class="note">It will appear again in your store.</p>
    </div>
    <div class="modal-footer">
      <button type="button" class="cancelbtn" onclick="closeModal('restore-modal')">Cancel</button>
      <button type="button" class="restorebtn" id="restore-button">Restore Blog</button>
    </div>
  </div>
</div>

<div id="delete-modal" class="modal">
  <div class="modal-content">
    <div class="modal-header danger">
      <i class="fi fi-rr-trash"></i>
      <h3>Permanent Delete</h3>
    </div>
    <div class="modal-body">
      <p>Are you sure you want to <strong>permanently delete</strong> this blog?</p>
      <p class="blog-name">{{this.name}}</p>
      <p class="note warning">This action <strong>cannot be undone</strong>. All data will be lost forever.</p>
    </div>
    <div class="modal-footer">
      <button type="button" class="cancelbtn" onclick="closeModal('delete-modal')">Cancel</button>
      <button type="button" class="deletebtn" id="delete-button">Delete Forever</button>
    </div>
  </div>
</div>

<form style="display: none" name="delete-form" method="post"></form>
<form style="display: none" name="restore-form" method="get"></form>

<script src="/js/admin/all/blogTrash.js"></script>