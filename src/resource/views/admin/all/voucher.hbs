<div class="admin-all-voucher-container">  
  <div class="header">
    <div class="board-title">
      <p>Voucher: </p>
    </div>

    {{> dateFilter}}
  </div>

  <div class="control-bar">
    <div class="search">
      <select id="search-type" class="search-btn">
        <option value="">Search by</option>
        <option value="_id" selected>ID</option>
        <option value="name">Name</option>
      </select>
      <input type="text" id="search-input" name="name" placeholder="Search voucher" />
    </div>

    <div class="sort-filter">
      <div class="sort">
        <label>Sort by:</label>
        <select id="discount" class="filter-btn">
          <option value="">Discount</option>
          <option value="1">Discount High - Low</option>
          <option value="-1">Discount Low - High</option>
        </select>
        <select id="startDate" class="filter-btn">
          <option value="">Created Date</option>
          <option value="1">Newest Created Date</option>
          <option value="-1">Oldest Created Date</option>
        </select>
        <select id="endDate" class="filter-btn">
          <option value="">Expiration Date</option>
          <option value="-1">Newest Expiration Date</option>
          <option value="1">Oldest Expiration Date</option>
        </select>
      </div>

      <div class="filter">
        <label>Filter:</label>
        <select id="status" class="filter-btn">
          <option value="">Status</option>
          <option value="active">Valid</option>
          <option value="end">Expired</option>
        </select>
        <select id="memberCode" class="filter-btn">
          <option value="">Member Tier</option>
        </select>
        <button id="clear-sort-filter" style="display: none">Clear Filter</button>
      </div>
    </div>

    <button class="create-btn" id="create-btn">
      <i class="fi fi-rr-plus"></i>
      <span>Add Voucher</span>
    </button>
  </div>

  <div class="table">
    {{> exportFileButton}}
    <table class="all-items">
      <thead>
        <tr>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      </thead>

      <tbody>
        {{#each (holderData 10)}}
        <tr>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <span class="pagination"></span>
</div>

<div class="admin-create-voucher-container" id="create-modal">
  <div id="form">
    <div class="form-title">
      <p>Add New Voucher</p>
    </div>

    <div class="form-group">
      <label for="code">Voucher Code</label>
      <input type="text" class="form-control" id="code" name="code" placeholder="Enter voucher code">
    </div>

    <div class="form-group">
      <label for="name">Voucher Name</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="Enter voucher name">
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      <input type="text" class="form-control" id="description" name="description" placeholder="Enter description">
    </div>

    <div class="form-group">
      <label for="discount">Discount (%)</label>
      <input type="text" class="form-control" id="discount" name="discount" placeholder="Enter discount">
    </div>

    <div class="form-group">
      <label for="maxDiscount">Max Discount</label>
      <input type="text" class="form-control" id="maxDiscount" name="maxDiscount" placeholder="Enter max discount">
    </div>

    <div class="form-group">
      <label for="minOrder">Min Order</label>
      <input type="text" class="form-control" id="minOrder" name="minOrder" placeholder="Enter min order">
    </div>

    <div class="form-group">
      <label for="status">Status</label>
      <select class="form-control" id="status" name="status">
        <option value="">Select status</option>
        <option value="active">Active</option>
        <option value="end">End</option>
      </select>
    </div>
    
    <div class="form-group">
      <label for="memberCode">Member Code</label>
      <select id="memberCode" class="filter-btn">
        <option value="">Member Tier</option>
      </select>
    </div>

    <div class="form-group">
      <label for="startDate">Start Date</label>
      <input type="date" class="form-control" id="startDate" name="startDate">
    </div>

    <div class="form-group">
      <label for="endDate">End Date</label>
      <input type="date" class="form-control" id="endDate" name="endDate">
    </div>

    <div class="submit-button">
      <button class="close-modal">Close</button>
      <button type="submit">Complete</button>
    </div>
  </div>
</div>

<div class="voucher-details-container" id="detail-modal">
  <div id="form">
    <table id="table-1">
      <thead>
        <tr><td colspan="2">VOUCHER INFORMATION</td></tr>
      </thead>
      <tr>
        <td>Voucher Code</td>
        <td><input type="text" name="id" disabled></td>
      </tr>
      <tr>
        <td>Voucher Name</td>
        <td><input type="text" name="name"></td>
      </tr>
      <tr>
        <td>Description</td>
        <td><input type="text" name="description"></td>
      </tr>
      <tr>
        <td>Discount</td>
        <td><input type="text" name="discount"></td>
      </tr>
      <tr>
        <td>Max Discount</td>
        <td><input type="text" name="maxDiscount"></td>
      </tr>
      <tr>
        <td>Min Order</td>
        <td><input type="text" name="minOrder"></td>
      </tr>
      <tr>
        <td>Status</td>
        <td><input type="text" name="status"></td>
      </tr>
      <tr>
        <td>Member Code</td>
        <td><input type="text" name="memberCode" disabled></td>
      </tr>
      <tr>
        <td>Start Date</td>
        <td><input type="date" name="startDate"></td>
      </tr>
      <tr>
        <td>End Date</td>
        <td><input type="date" name="endDate"></td>
      </tr>
    </table>

    <div class="submit-button">
      <button class="close-modal">Close</button>
      <button type="submit">Update</button>
    </div>
  </div>
</div>

<script type="module" src="/js/admin/all/voucher.js"></script>