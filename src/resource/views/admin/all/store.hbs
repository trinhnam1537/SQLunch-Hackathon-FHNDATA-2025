<div class="admin-all-stores-container">  
  <div class="header">
    <div class="board-title">
      <p>Store: </p>
    </div>

    <div class="date-filter">
      <input type="date" id="start-date">
      <input type="date" id="end-date">
      <button title="submit" type="submit">View</button>
    </div>
  </div>

  <div class="control-bar">
    <div class="search">
      <select id="search-type" class="search-btn">
        <option value="">Search by</option>
        <option value="_id" selected>ID</option>
        <option value="name">Name</option>
        <option value="address">Address</option>
      </select>
      <input type="text" id="search-input" name="name" placeholder="Search store" />
    </div>

    <div class="sort-filter">
      <div class="sort">
        <label>Sort by:</label>
        <select id="revenue" class="filter-btn">
          <option value="">Revenue</option>
          <option value="1">Revenue High - Low</option>
          <option value="-1">Revenue Low - High</option>
        </select>
      </div>

      <div class="filter">
        <label>Filter:</label>
        <select id="revenue" class="filter-btn">
          <option value="">Revenue</option>
        </select>
        <button id="clear-sort-filter" style="display: none">Clear Filter</button>
      </div>
    </div>

    <a href="/admin/all-stores/store/create" target="_blank" rel="noopener noreferrer" class="create-btn" id="create-btn">
      <i class="fi fi-rr-plus"></i>
      <span>Add Store</span>
    </a>
  </div>

  <div class="table">
    {{> exportFileButton}}
    <table class="all-items">
      <thead>
        <tr>
          <td style="width:  5%">No.           </td>
          <td style="width: 15%">Store Code   </td>
          <td style="width: 20%">Store Name  </td>
          <td style="width: 25%">Address       </td>
          <td style="width: 25%">Total Revenue</td>
          <td style="width: 10%">Details      </td>
        </tr>
      </thead>

      <tbody>
        {{#each (holderData 10)}}
        <tr>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <span class="pagination"></span>
</div>

<script type="module" src="/js/admin/all/store.js"></script>