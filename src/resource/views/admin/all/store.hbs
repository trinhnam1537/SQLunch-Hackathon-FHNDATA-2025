<div class="admin-all-stores-container">  
  <div class="header">
    <div class="board-title">
      <p>Store: </p>
    </div>

    {{> dateFilter}}
  </div>

  <div class="control-bar">
    <div class="search">
      <input type="text" id="search-input" data-id="name" name="name" placeholder="Search store" />
    </div>

    <div class="sort-filter">
      <div class="sort">
        <label>Sort by:</label>
        <select id="revenue" class="filter-btn">
          <option value="">Revenue</option>
          <option value="1">Revenue High - Low</option>
          <option value="-1">Revenue Low - High</option>
        </select>
      </div>

      <div class="filter">
        <label>Filter:</label>
        <select id="revenue" class="filter-btn">
          <option value="">Revenue</option>
        </select>
        <button id="clear-sort-filter" style="display: none">Clear Filter</button>
      </div>
    </div>

    <button class="create-btn" id="create-btn">
      <i class="fi fi-rr-plus"></i>
      <span>Add Store</span>
    </button>
  </div>

  <div class="table">
    {{> exportFileButton}}
    <table class="all-items">
      <thead>
        <tr>
          <td style="width:  5%">No.           </td>
          <td style="width: 15%">Store Code   </td>
          <td style="width: 20%">Store Name  </td>
          <td style="width: 25%">Address       </td>
          <td style="width: 25%">Total Revenue</td>
          <td style="width: 10%">Details      </td>
        </tr>
      </thead>

      <tbody>
        {{#each (holderData 10)}}
        <tr>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <span class="pagination"></span>
</div>

<div class="admin-create-store-container" id="create-modal">
  <div id="form">
    <div class="form-title">
      <p>Add New Store</p>
    </div>

    <div class="form-group">
      <label for="name">Store Name</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="Enter store name">
    </div>

    <div class="form-group">
      <label for="address">Address</label>
      <input type="text" class="form-control" id="address" name="address" placeholder="Enter address">
    </div>

    <div class="form-group">
      <label for="phone">Phone Number</label>
      <input type="text" class="form-control" id="phone" name="phone" placeholder="Enter phone number">
    </div>

    <div class="form-group">
      <label for="email">Email</label>
      <input type="email" class="form-control" id="email" name="email" placeholder="Enter email">
    </div>

    <div class="submit-button">
      <button class="close-modal">Close</button>
      <button type="submit">Complete</button>
    </div>
  </div>
</div>

<div class="store-details-container" id="detail-modal">
  <div id="form">
    
    <table id="table-1">
      <thead>
        <tr><td colspan="2">STORE INFORMATION</td></tr>
      </thead>
      <tr>
        <td>Store Code</td>
        <td><input type="text" id="id" disabled></td>
      </tr>
      <tr>
        <td>Store Name</td>
        <td><input type="text" id="name"></td>
      </tr>
      <tr>
        <td>Store Address</td>
        <td><input type="text" id="address"></td>
      </tr>
      <tr>
        <td>Detailed Description</td>
        <td><input type="text" id="details"></td>
      </tr>
      <tr>
        <td>Store Revenue</td>
        <td><input type="text" id="total" disabled></td>
      </tr>
    </table>

    <div class="submit-button">
      <button class="close-modal">Close</button>
      <button type="submit">Update</button>
    </div>
  </div>
</div>

<script type="module" src="/js/admin/all/store.js"></script>